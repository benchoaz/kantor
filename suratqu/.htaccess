# Disable directory browsing
Options -Indexes

# Protect sensitive directories
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect config and includes folders (EXCEPT storage/surat for PDF access)
RewriteEngine On
RewriteRule ^(config|includes|database|templates|modules)/.*$ - [F,L]

# Allow storage/surat for PDF downloads
# storage/surat is accessible for PDFs
